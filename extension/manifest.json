{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Saver",
  "description": "Save and search prompts in ChatGPT.",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
